---
import BaseLayout from '../layouts/BaseLayout.astro';

/**
 * Gallery page — full masonry-style photo grid with category filters and lightbox.
 * Expanded version of the homepage gallery preview.
 */

interface GalleryItem {
  caption: string;
  category: 'flowers' | 'farm' | 'products';
  aspect: '16/9' | '3/4' | '1/1';
  bg: string;
}

const galleryItems: GalleryItem[] = [
  { caption: 'Spring Dahlias',       category: 'flowers',  aspect: '3/4',  bg: 'rgba(196, 120, 91, 0.15)' },
  { caption: 'Morning Light',        category: 'farm',     aspect: '16/9', bg: 'rgba(201, 169, 110, 0.18)' },
  { caption: 'Fresh Bouquet',        category: 'products', aspect: '1/1',  bg: 'var(--color-cream-dark)' },
  { caption: 'The Dahlia Field',     category: 'flowers',  aspect: '16/9', bg: 'rgba(44, 85, 48, 0.10)' },
  { caption: 'The Stand',            category: 'products', aspect: '3/4',  bg: 'rgba(196, 120, 91, 0.10)' },
  { caption: 'Sunset Over the Rows', category: 'farm',     aspect: '16/9', bg: 'rgba(201, 169, 110, 0.12)' },
  { caption: 'Ranunculus Harvest',   category: 'flowers',  aspect: '1/1',  bg: 'rgba(196, 120, 91, 0.12)' },
  { caption: 'Barn at Dawn',         category: 'farm',     aspect: '3/4',  bg: 'var(--color-cream-dark)' },
  { caption: 'Dried Wreath',         category: 'products', aspect: '1/1',  bg: 'rgba(201, 169, 110, 0.15)' },
  { caption: 'Sweet Pea Trellis',    category: 'flowers',  aspect: '3/4',  bg: 'rgba(44, 85, 48, 0.08)' },
  { caption: 'Market Day',           category: 'products', aspect: '16/9', bg: 'rgba(196, 120, 91, 0.08)' },
  { caption: 'Wildflower Meadow',    category: 'flowers',  aspect: '16/9', bg: 'rgba(201, 169, 110, 0.10)' },
  { caption: 'Garden Pathway',       category: 'farm',     aspect: '1/1',  bg: 'rgba(44, 85, 48, 0.12)' },
  { caption: 'Zinnia Close-Up',      category: 'flowers',  aspect: '1/1',  bg: 'rgba(196, 120, 91, 0.18)' },
  { caption: 'Herb Bundles',         category: 'products', aspect: '3/4',  bg: 'var(--color-cream-dark)' },
  { caption: 'Fog in the Valley',    category: 'farm',     aspect: '16/9', bg: 'rgba(44, 85, 48, 0.06)' },
];

const categories = ['all', 'flowers', 'farm', 'products'] as const;
---

<BaseLayout
  title="Gallery | Moonbloom Farms"
  description="Browse photos from Moonbloom Farms — seasonal blooms, life on the farm, and our handcrafted floral products."
>
  <!-- Page Hero Banner -->
  <section class="page-hero" aria-label="Gallery">
    <div class="page-hero-bg" aria-hidden="true"></div>
    <div class="page-hero-overlay" aria-hidden="true"></div>
    <div class="page-hero-content">
      <h1 class="page-hero-title">Gallery</h1>
      <p class="page-hero-subtitle">A glimpse into life at the farm</p>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="gallery-section" aria-label="Photo Gallery">
    <div class="container">

      <!-- Category Filter Buttons -->
      <div class="gallery-filters" role="group" aria-label="Filter gallery by category">
        {categories.map((cat) => (
          <button
            class={`filter-btn${cat === 'all' ? ' filter-btn--active' : ''}`}
            data-filter={cat}
            type="button"
          >
            {cat.charAt(0).toUpperCase() + cat.slice(1)}
          </button>
        ))}
      </div>

      <!-- Masonry Grid -->
      <div class="masonry-grid" id="gallery-grid">
        {galleryItems.map((item, index) => (
          <button
            class="masonry-item"
            data-category={item.category}
            data-index={index}
            type="button"
            aria-label={`View ${item.caption}`}
          >
            <div
              class="masonry-placeholder"
              style={`background-color: ${item.bg}; aspect-ratio: ${item.aspect};`}
            >
              <span class="masonry-placeholder-text">Photo</span>
              <div class="masonry-hover-overlay" aria-hidden="true"></div>
            </div>
            <span class="masonry-caption">{item.caption}</span>
          </button>
        ))}
      </div>

    </div>
  </section>

  <!-- Lightbox container (populated by JS) -->
  <div
    id="lightbox"
    class="lightbox"
    role="dialog"
    aria-modal="true"
    aria-label="Image lightbox"
    aria-hidden="true"
  >
    <div class="lightbox-overlay" id="lightbox-overlay"></div>
    <button class="lightbox-close" id="lightbox-close" type="button" aria-label="Close lightbox">&times;</button>
    <button class="lightbox-nav lightbox-prev" id="lightbox-prev" type="button" aria-label="Previous image">&#8249;</button>
    <button class="lightbox-nav lightbox-next" id="lightbox-next" type="button" aria-label="Next image">&#8250;</button>
    <div class="lightbox-content" id="lightbox-content">
      <div class="lightbox-image" id="lightbox-image"></div>
      <p class="lightbox-caption" id="lightbox-caption"></p>
    </div>
  </div>
</BaseLayout>

<style>
  /* ─── Page Hero Banner ─── */
  .page-hero {
    position: relative;
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-top: calc(-1 * (var(--space-sm) * 2 + 1.5rem * 1.2));
    padding-top: calc(var(--space-sm) * 2 + 1.5rem * 1.2);
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background:
      radial-gradient(
        ellipse at 30% 70%,
        rgba(44, 85, 48, 0.6) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 70% 30%,
        rgba(201, 169, 110, 0.3) 0%,
        transparent 50%
      ),
      linear-gradient(
        160deg,
        #2c5530 0%,
        #3a6b35 30%,
        #6b7a3a 55%,
        #a8914e 80%,
        #c9a96e 100%
      );
  }

  .page-hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(30, 42, 28, 0.5) 0%,
      rgba(30, 42, 28, 0.4) 50%,
      rgba(30, 42, 28, 0.55) 100%
    );
  }

  .page-hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--space-xl) var(--space-md);
    max-width: 700px;
  }

  .page-hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2.2rem, 5.5vw, var(--font-size-4xl));
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-cream);
    margin: 0 0 var(--space-sm);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
  }

  .page-hero-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, var(--font-size-lg));
    line-height: 1.6;
    color: var(--color-cream);
    margin: 0;
    opacity: 0.9;
    font-style: italic;
  }

  /* ─── Gallery Section ─── */
  .gallery-section {
    padding: var(--space-xl) 0 var(--space-2xl);
  }

  /* ─── Category Filter Buttons ─── */
  .gallery-filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-xl);
  }

  .filter-btn {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: capitalize;
    padding: 0.5em 1.4em;
    border: 2px solid var(--color-forest);
    border-radius: 999px;
    background-color: transparent;
    color: var(--color-forest);
    cursor: pointer;
    transition:
      background-color var(--transition),
      color var(--transition),
      border-color var(--transition);
  }

  .filter-btn:hover {
    background-color: rgba(44, 85, 48, 0.08);
  }

  .filter-btn--active {
    background-color: var(--color-forest);
    color: var(--color-cream);
    border-color: var(--color-forest);
  }

  .filter-btn--active:hover {
    background-color: var(--color-forest-light);
    border-color: var(--color-forest-light);
  }

  /* ─── Masonry Grid (CSS Columns) ─── */
  .masonry-grid {
    column-count: 3;
    column-gap: var(--space-md);
  }

  .masonry-item {
    display: inline-block;
    width: 100%;
    margin-bottom: var(--space-md);
    break-inside: avoid;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    text-align: left;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .masonry-item[data-hidden="true"] {
    display: none;
  }

  .masonry-placeholder {
    position: relative;
    width: 100%;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: transform var(--transition);
  }

  .masonry-placeholder-text {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-charcoal-light);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.5;
    z-index: 1;
    user-select: none;
  }

  .masonry-hover-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(44, 85, 48, 0.08);
    opacity: 0;
    transition: opacity var(--transition);
    border-radius: var(--border-radius);
  }

  .masonry-item:hover .masonry-placeholder {
    transform: scale(1.03);
  }

  .masonry-item:hover .masonry-hover-overlay {
    opacity: 1;
  }

  .masonry-item:focus-visible {
    outline: 2px solid var(--color-forest);
    outline-offset: 4px;
    border-radius: var(--border-radius);
  }

  .masonry-caption {
    display: block;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-charcoal-light);
    margin-top: 0.5em;
    padding-bottom: 0.25em;
  }

  /* ─── Lightbox ─── */
  .lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .lightbox[aria-hidden="false"] {
    opacity: 1;
    pointer-events: auto;
  }

  .lightbox-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.85);
  }

  .lightbox-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 80vw;
    max-height: 80vh;
  }

  .lightbox-image {
    width: 60vw;
    max-width: 700px;
    max-height: 65vh;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-charcoal-light);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.7;
  }

  .lightbox-caption {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    color: var(--color-cream);
    margin: var(--space-md) 0 0;
    text-align: center;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.3);
  }

  .lightbox-close {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    z-index: 2;
    background: none;
    border: none;
    color: var(--color-cream);
    font-size: 2.5rem;
    line-height: 1;
    cursor: pointer;
    padding: 0.25em;
    opacity: 0.8;
    transition: opacity var(--transition), transform var(--transition);
  }

  .lightbox-close:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  .lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    background: none;
    border: none;
    color: var(--color-cream);
    font-size: 3.5rem;
    line-height: 1;
    cursor: pointer;
    padding: 0.25em;
    opacity: 0.7;
    transition: opacity var(--transition), transform var(--transition);
  }

  .lightbox-nav:hover {
    opacity: 1;
  }

  .lightbox-prev {
    left: var(--space-md);
  }

  .lightbox-prev:hover {
    transform: translateY(-50%) translateX(-4px);
  }

  .lightbox-next {
    right: var(--space-md);
  }

  .lightbox-next:hover {
    transform: translateY(-50%) translateX(4px);
  }

  .lightbox-close:focus-visible,
  .lightbox-nav:focus-visible {
    outline: 2px solid var(--color-cream);
    outline-offset: 4px;
    border-radius: 4px;
  }

  /* ─── Responsive: Tablet ─── */
  @media (max-width: 1024px) {
    .masonry-grid {
      column-count: 2;
    }
  }

  /* ─── Responsive: Tablet (hero) ─── */
  @media (max-width: 768px) {
    .page-hero {
      min-height: 35vh;
    }

    .page-hero-content {
      padding: var(--space-lg) var(--space-sm);
    }

    .lightbox-image {
      width: 85vw;
      max-height: 60vh;
    }

    .lightbox-content {
      max-width: 90vw;
    }

    .lightbox-nav {
      font-size: 2.5rem;
    }

    .lightbox-prev {
      left: var(--space-xs);
    }

    .lightbox-next {
      right: var(--space-xs);
    }
  }

  /* ─── Responsive: Mobile ─── */
  @media (max-width: 600px) {
    .masonry-grid {
      column-count: 1;
    }

    .gallery-section {
      padding: var(--space-lg) 0 var(--space-xl);
    }

    .lightbox-image {
      width: 92vw;
      max-height: 55vh;
    }

    .lightbox-close {
      top: var(--space-sm);
      right: var(--space-sm);
      font-size: 2rem;
    }
  }

  /* ─── Responsive: Small Mobile ─── */
  @media (max-width: 480px) {
    .page-hero {
      min-height: 30vh;
    }

    .page-hero-content {
      padding: var(--space-md) var(--space-sm);
    }
  }

  /* ─── Reduced Motion ─── */
  @media (prefers-reduced-motion: reduce) {
    .masonry-placeholder,
    .masonry-hover-overlay,
    .masonry-item,
    .lightbox,
    .lightbox-close,
    .lightbox-nav,
    .filter-btn {
      transition: none;
    }
  }
</style>

<script>
  /**
   * Gallery page interactivity:
   * 1. Category filter buttons
   * 2. Lightbox with navigation
   */
  document.addEventListener('DOMContentLoaded', () => {
    // ─── Category Filtering ───
    const filterBtns = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
    const galleryItems = document.querySelectorAll<HTMLButtonElement>('.masonry-item');

    filterBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');

        // Update active button
        filterBtns.forEach((b) => b.classList.remove('filter-btn--active'));
        btn.classList.add('filter-btn--active');

        // Show/hide items
        galleryItems.forEach((item) => {
          const category = item.getAttribute('data-category');
          if (filter === 'all' || category === filter) {
            item.removeAttribute('data-hidden');
          } else {
            item.setAttribute('data-hidden', 'true');
          }
        });
      });
    });

    // ─── Lightbox ───
    const lightbox = document.getElementById('lightbox')!;
    const lightboxOverlay = document.getElementById('lightbox-overlay')!;
    const lightboxClose = document.getElementById('lightbox-close')!;
    const lightboxPrev = document.getElementById('lightbox-prev')!;
    const lightboxNext = document.getElementById('lightbox-next')!;
    const lightboxImage = document.getElementById('lightbox-image')!;
    const lightboxCaption = document.getElementById('lightbox-caption')!;

    let currentIndex = 0;
    let visibleItems: HTMLButtonElement[] = [];

    function getVisibleItems(): HTMLButtonElement[] {
      return Array.from(galleryItems).filter(
        (item) => item.getAttribute('data-hidden') !== 'true'
      );
    }

    function openLightbox(index: number): void {
      visibleItems = getVisibleItems();
      currentIndex = index;
      updateLightboxContent();
      lightbox.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      lightboxClose.focus();
    }

    function closeLightbox(): void {
      lightbox.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      // Return focus to the gallery item that was clicked
      if (visibleItems[currentIndex]) {
        visibleItems[currentIndex].focus();
      }
    }

    function updateLightboxContent(): void {
      const item = visibleItems[currentIndex];
      if (!item) return;

      const placeholder = item.querySelector('.masonry-placeholder') as HTMLElement;
      const caption = item.querySelector('.masonry-caption')?.textContent || '';
      const bg = placeholder.style.backgroundColor;
      const aspect = placeholder.style.aspectRatio;

      lightboxImage.style.backgroundColor = bg;
      lightboxImage.style.aspectRatio = aspect;
      lightboxImage.textContent = 'Photo';
      lightboxCaption.textContent = caption;
    }

    function goToPrev(): void {
      currentIndex = (currentIndex - 1 + visibleItems.length) % visibleItems.length;
      updateLightboxContent();
    }

    function goToNext(): void {
      currentIndex = (currentIndex + 1) % visibleItems.length;
      updateLightboxContent();
    }

    // Open lightbox on gallery item click
    galleryItems.forEach((item) => {
      item.addEventListener('click', () => {
        const visible = getVisibleItems();
        const idx = visible.indexOf(item);
        if (idx !== -1) {
          openLightbox(idx);
        }
      });
    });

    // Close events
    lightboxClose.addEventListener('click', closeLightbox);
    lightboxOverlay.addEventListener('click', closeLightbox);

    // Navigation events
    lightboxPrev.addEventListener('click', (e) => {
      e.stopPropagation();
      goToPrev();
    });

    lightboxNext.addEventListener('click', (e) => {
      e.stopPropagation();
      goToNext();
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e: KeyboardEvent) => {
      if (lightbox.getAttribute('aria-hidden') !== 'false') return;

      switch (e.key) {
        case 'Escape':
          closeLightbox();
          break;
        case 'ArrowLeft':
          goToPrev();
          break;
        case 'ArrowRight':
          goToNext();
          break;
      }
    });
  });
</script>
