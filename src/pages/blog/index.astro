---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout
  title="Blog | Moonbloom Farms"
  description="Stories from the field — seasonal updates, growing tips, and farm life at Moonbloom Farms in the Sonoma Valley."
>
  <!-- Page Hero Banner -->
  <section class="page-hero" aria-label="Blog — From the Field">
    <div class="page-hero-bg" aria-hidden="true"></div>
    <div class="page-hero-overlay" aria-hidden="true"></div>
    <div class="page-hero-content">
      <h1 class="page-hero-title">From the Field</h1>
      <p class="page-hero-subtitle">Seasonal stories, growing updates, and dispatches from life on the farm.</p>
    </div>
  </section>

  <!-- Blog Post Listing -->
  <section class="blog-listing" aria-label="Blog Posts">
    <div class="container">
      <div class="blog-grid">
        {posts.map((post) => {
          const formattedDate = post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          });
          return (
            <article class="blog-card">
              <div class="blog-card-image" aria-hidden="true">
                <span class="blog-card-image-text">Photo</span>
              </div>
              <div class="blog-card-body">
                <time class="blog-card-date" datetime={post.data.date.toISOString()}>
                  {formattedDate}
                </time>
                <h2 class="blog-card-title">{post.data.title}</h2>
                <p class="blog-card-excerpt">{post.data.description}</p>
                <a href={`/blog/${post.id}`} class="blog-card-link">
                  Read More <span class="blog-card-link-arrow" aria-hidden="true">&rarr;</span>
                </a>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ─── Page Hero Banner ─── */
  .page-hero {
    position: relative;
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-top: calc(-1 * (var(--space-sm) * 2 + 1.5rem * 1.2));
    padding-top: calc(var(--space-sm) * 2 + 1.5rem * 1.2);
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background:
      radial-gradient(
        ellipse at 30% 70%,
        rgba(44, 85, 48, 0.6) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 70% 30%,
        rgba(201, 169, 110, 0.3) 0%,
        transparent 50%
      ),
      linear-gradient(
        160deg,
        #2c5530 0%,
        #3a6b35 30%,
        #6b7a3a 55%,
        #a8914e 80%,
        #c9a96e 100%
      );
  }

  .page-hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(30, 42, 28, 0.5) 0%,
      rgba(30, 42, 28, 0.4) 50%,
      rgba(30, 42, 28, 0.55) 100%
    );
  }

  .page-hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--space-xl) var(--space-md);
    max-width: 700px;
  }

  .page-hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2.2rem, 5.5vw, var(--font-size-4xl));
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-cream);
    margin: 0 0 var(--space-sm);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
  }

  .page-hero-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, var(--font-size-lg));
    line-height: 1.6;
    color: var(--color-cream);
    margin: 0;
    opacity: 0.9;
    font-style: italic;
  }

  /* ─── Blog Listing Section ─── */
  .blog-listing {
    padding: var(--space-2xl) 0;
  }

  /* ─── Card Grid ─── */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  /* ─── Card ─── */
  .blog-card {
    background-color: var(--color-cream);
    border-radius: var(--border-radius);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    transition:
      transform var(--transition),
      box-shadow var(--transition);
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  /* ─── Card Image Placeholder ─── */
  .blog-card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: var(--color-cream-dark);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-card-image-text {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-charcoal-light);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.5;
  }

  /* ─── Card Body ─── */
  .blog-card-body {
    padding: var(--space-md) var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .blog-card-date {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-charcoal-light);
    opacity: 0.7;
  }

  .blog-card-title {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-charcoal);
    margin: 0;
  }

  .blog-card-excerpt {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--color-charcoal-light);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* ─── Read More Link ─── */
  .blog-card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4em;
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: 700;
    color: var(--color-forest);
    text-decoration: none;
    margin-top: var(--space-xs);
    transition: color var(--transition);
  }

  .blog-card-link:hover {
    color: var(--color-terracotta);
  }

  .blog-card-link-arrow {
    display: inline-block;
    transition: transform var(--transition);
  }

  .blog-card-link:hover .blog-card-link-arrow {
    transform: translateX(4px);
  }

  /* ─── Responsive: Mobile ─── */
  @media (max-width: 768px) {
    .page-hero {
      min-height: 35vh;
    }

    .page-hero-content {
      padding: var(--space-lg) var(--space-sm);
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .page-hero {
      min-height: 30vh;
    }

    .page-hero-content {
      padding: var(--space-md) var(--space-sm);
    }

    .blog-listing {
      padding: var(--space-xl) 0;
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .blog-card,
    .blog-card-link,
    .blog-card-link-arrow {
      transition: none;
    }
  }
</style>
